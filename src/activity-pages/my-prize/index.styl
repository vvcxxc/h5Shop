.prize_page {
  width 100vw
  height 100vh
  .prize_tab {
    width 100%
    height: 80px
    display: flex
    .prize_label {
      width 50%
      position relative
      text-align: center
      line-height: 80px
      color #FE6E23
    }
    .prize_activity {
      font-weight: bold
    }
    .prize_activity::after {
      content: ''
      display: block
      position: absolute
      width 60px
      height 7px
      border-radius: 4px
      background: #FB8866
      bottom: 0
      left 50%
      transform: translateX(-50%)
    }
  }

}

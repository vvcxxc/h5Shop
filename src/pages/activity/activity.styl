  padding-bottom 1px
  padding-top 20px
  height auto
.checkBox_bar
  height 100px
  display flex
  justify-content flex-start
  align-items center
  padding 0 15px
  overflow auto
.checkBox_wrap
    position relative
    //width 160px
    height 45px
    border-radius 5px
    text-align center
    margin-right 20px
    white-space: nowrap;
    // display inline-block
    .checkBox_text
      //color #7b7b7b
      padding 5px 30px
    .checkBox_isCheck
        position absolute;
        bottom 0;
        right 0;
        width: 0;
        height: 0;
        border-bottom: 30px solid #fe7d70;
        border-left: 30px solid transparent;
    .checkBox_cancel
        color #fff;
        width 12px;
        height 28px;
        font-size 20px;
        position absolute;
        right 0;
        bottom 0;



.store_item
  display flex
  padding 0 15px
  height 280px
  margin-bottom 20px
  .store_img
    flex 4
    .store_img_show
      border-radius 8px
      height 100%
      width 100%
  .store_info
    flex 6
    line-height 30px
    padding 20px 15px
    display flex
    flex-direction column
    justify-content space-between
    .store_desc
      .store_name
        display: -webkit-box;
        /* autoprefixer: off */
        -webkit-box-orient: vertical;
        /* autoprefixer: on */
        -webkit-line-clamp: 2;
        overflow: hidden;
        font-size 35px
        line-height:1.2
        font-weight 600
      .store_tips
        margin-top 15px
        .store_tips_item
          padding 5px 20px
          background #fde7e4
          margin-right 10px
          border-radius 8px
          color #fe7d70
          font-weight 500
          font-size 22px
          display inline-block
          max-width 200px
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
    .store_msg
      .store_price
        margin-bottom 5px
        .store_price_new
          display inline-block
          font-size 36px
          font-weight 700
          color #fe7d70
        .store_price_old
          display inline-block
          font-size 24px
          color #fe7d70
          text-decoration line-through
      .store_other_info
        display flex
        justify-content space-between
        font-size 24px
        .store_any
          .store_follow
            color #fe7d70
          .store_follow_name
            color #ccc
            width 300px
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
        .store_distance
          .store_distance_num
            color #ccc


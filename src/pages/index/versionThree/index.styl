  .img_box {
    display: flex;
    .img_list {
      background:#5D8DE0;
      box-shadow:0px 3px 5px 0px rgba(0, 0, 0, 0.2);
      border-radius:10px;
      position:relative;
    }
    .taro-img {
      width 218px
      height 177px
      border-radius:10px;
      box-shadow:0px 3px 5px 0px rgba(0, 0, 0, 0.2);
    }

@import '../../utils/config.styl'
.headr
  // height 312px
  background: #ccc
  .search
    background: #ffffff
    padding 16px 30px
    .container
      background: #F1F1F1
      height 58px
      border-radius: 58px
      padding 0 40px
      box-sizing: border-box
      .city
        font-size: 28px
        display: flex
        // flex-direction: column
        // justify-content: space-around
        // align-content: space-around
        .chevron-down
          margin-left 10px
          display: flex
          flex-direction column

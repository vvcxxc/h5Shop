.advert
  display:flex;
  height 191px
  padding-top 0
  margin-top -10px
  background-color #fff
  padding: 20px 21px 24px 21px
  justify-content: space-between
  box-sizing: border-box
  .taro-img
    width: 335px
    height: 147px
.tab
    height 70px
    background: #fff
    .label
      height 100%
      line-height 95px
      border-bottom 4px solid #f6f6f6
   .active
		.label
			font-size: 37px
			color theme-color
			border-bottom 8px solid theme-color
			font-weight bold
.merchant {
	background-color: #fff;
	// margin-top: 20px;
	&.inset {
		margin: 20px 20px 20px;
		border-radius: 50px;
		padding-top: 20px;
	}
	&.update-inset {
		border-radius: 22px;
	}
	.content {
		padding: 22px;
		padding-bottom: 0;
		.img {
			width: 152px;
			height: 152px;
			margin-right: 30px;
		}
		.title {
			font-size: 32px;
			line-height: 1;
		}
		.label {
			font-size: 24px;
			color: #666;
			margin-top: 40px;
			line-height: 1;
		}
		.right-icon {
			width: 15px;
			height: 27px;
			opacity: 0.38;
		}
		.tag {
			width: 105px;
			// height: 38px;
			border-radius: 5px;
			font-size: 20px;
			color: rgba(255, 102, 84, 1);
			text-align: center;
			margin-right: 10px;
			margin-top: 18px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
		}
	}
	.flex-right{
		flex-direction:row-reverse;
	}
	.all-data {
		display:flex;
		padding:0px 12px;
		margin-top:15px;
	}
	.pb8 {
		padding-bottom: 25px;
	}
}

.banner{
	width:50%;
	height: 260px;
	image {
		background-color: #ccc;
		width:100%;
		height: 100%;
		max-width: 100%;
		max-height: 100%;
		border-radius: 8px;
	}
}



.give {
	height: 84px;
	font-size: 24px;
	margin-left: 22px;
	box-sizing: border-box;
	border-bottom: 1px solid #EDEDED;
	.icon {
		width: 32px;
		height: 27px;
		background: rgba(217, 123, 11, 1);
		border-radius: 2px;
		text-align: center;
		font-size: 19px;
		color: #fff;
		margin-right: 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
	}
	.strong {
		color: #c71d0b;
	}
	.info {
		font-size: 20px;
		color: #666;
	}
}
.more {
	height: 70px;
	font-size: 20px;
	color: #999;
	.img {
		width: 27px;
		height: 15px;
		margin-left: 6px;
	}
}
.ellipsis-one {
	overflow:hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.ml10{
	margin-left: 10px;
}

// 重新构造图片
.content_box {
	display: flex;
	justify-content: space-between;
	align-items:center;
	padding:20px 25px;
	.content_img {
		height:16vh;
		width:50%;
		.taro-img {
			height:16vh;
      width:100% ;
			image {
			height:100%;
			width:100% ;
			border-radius: 10px;
			}
		}
	}
	.content_update_img {
		height:22vh;
		width:100% ;
			image {
			height:100%;
			width:100%
			border-radius: 10px;
		}
	}
	.hidden_content_img {
		display: none;

	}
}

.no_receive {
  display: flex;
  justify-content: center;
  height:95px;
  background-color:rgba(255,242,230,1);
  align-items:center;
  }
.receive_box {
  background-color: rgba(255,242,230,1)
  text-align: center;
  padding-top:13px;
  padding-bottom:16px;
  .receive{
    font-family:PingFang-SC-Bold;
    font-size:35px;
    line-height:1;
    color:#FF6654;
    font-weight:bold;
    margin-bottom:8px;
  }
  .focus_on{
    font-size:26px;
    font-family:PingFang-SC-Regular;
    font-weight:400;
    line-height:1;
    color:#313131;
  a {
    color:#2649FD;
    border-bottom:1px solid #2649FD;
    }
  }
}
.new_box {
  display: flex;
  width: 100%;
  justify-content: center;
  margin-top 20px
  .box {
    width:87vw;
    background:rgba(255,255,255,1);
    border-radius:20px;
    padding-top: 34px;
    padding-left 27px
    padding-right 28px
  }
  .box_bottom {
    // margin-bottom -1px
  }
}

.box_title {
  display: flex;
  .title_l {
    width:153px;
    height:152px;
    margin-right 19px;
    .taro-img {
      height 100%
      width 100%
    }
  }
  .title_r{
    flex: 1;
   div:nth-child(1){
      font-size:32px;
      font-family:PingFang-SC-Bold;
      color:rgba(49,49,49,1);
      line-height:1;
      margin-bottom 19px
      font-weight: bold;
    }
    div:nth-child(2){
      font-family:PingFang-SC-Medium;
      color:rgba(102,102,102,1);
      font-size: 23px;
      display: flex;
      justify-content: space-between;
      margin-bottom 28px;
    }
    .view{
      display: flex;
      div {
        height 35px
        display: flex;
        align-items: center;
        padding: 0 12px;
        font-size: 18px;
        color:#FFFFFF;
        border-radius:5px;
        font-family:PingFang-SC-Medium;
        margin-right 9px
      }
      .span {
        border:1px solid rgba(255,102,84,1);
        color:#FF6654;
        font-size: 18px;
        box-sizing: border-box
      }
    }
  }
}
.box_bottom{
  div {
    font-size: 23px;
    display: flex
    color:rgba(49,49,49,1);
    font-family:PingFang-SC-Regular
    padding-bottom 25px
    padding-top:25px
    line-height: 1
    display: flex
    border-bottom:1px solid #eeeeee
    div {
      padding-top 0;
      padding-bottom 0
      border: 0;
      line-height 1.1
    }
    .taro-img {
       width: 32px;
       height 27px;
       margin-right: 15px;
    }
  }
}

.poster-main {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
}//大盒子

  .poster-box {
    width: 544px;
    background: rgba(255, 255, 255, 1);

    //头部tltle图片
    .taro-img {
      height 123px;
      width: 100%;
      img {
        height:auto;
      }
    }

    .main {
      margin-top: 12px;
      margin-bottom: 28px;

      .gift-img {
        text-align: center;
        height: 507px;
        padding 0 26px;
        position: relative;

        .gift-image {//主图
          height 100%;
        }

        .give-gift {
          position: absolute;
          bottom: 20px;
          right: 40px;
          width: 192px;
          height: 208px;
          background: #EE2633;
          border-radius: 20px 21px;
          padding-bottom: 6px;

          .give-gift-first-line {
            padding: 12px 0px;
            font-size: 28px;
            font-family: PingFang SC;
            font-weight: 800;
            color: rgba(255, 255, 255, 1);
          }

          .give-gift-second-line {
            padding: 0px 12px;
            position: relative;

            .taro-img {//礼品图
              width: 170px;
              height: 146px;
              border-radius: 0px 0px 10px 10px;
            }
            
            img {
              width: 170px;
              height: 146px;
              border-radius: 0px 0px 10px 10px;
            }

            .test {
              position: absolute;
              top: 1px;
              left: 13px;
              border-radius: 0px;
            }

            .giving {
              position: absolute;
              right: 12px;
              top: 10px;
              width: 49px;
              height: 49px;
              line-height: 49px;
              text-align: center;
              background: linear-gradient(0deg, rgba(243, 94, 4, 1) 0%, rgba(255, 163, 58, 1) 100%);
              box-shadow: 0px 8px 7px 0px rgba(6, 0, 1, 0.08);
              border-radius: 50%;
              font-size: 28px;
              font-family: PingFang SC;
              font-weight: bold;
              color: rgba(255, 255, 255, 1);
            }

            .price {
              position: absolute;
              left: 15px;
              bottom: 15px;
              font-size: 26px;
              font-family: PingFang SC;
              font-weight: 800;
            }
          }
        }

      }
    }

  }


.project-info {
  display: flex;
  border: 1px solid rgba(226, 226, 226, 1);
  margin: 0 26px;
  // padding 0 26px;
  // padding-top 19px;
  padding: 0px 21px 15px 21px;
  border-top: none;

  .group-number {
    margin-bottom: 10px;
    font-size: 22px;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(0, 0, 0, 1);

    text {
      font-size: 18px;
      padding: 1px 5px;
      font-weight: normal;
      color: rgba(238, 38, 51, 1);
      border: 1px solid rgba(238, 38, 51, 1);
      border-radius: 13px;
    }
  }

  .info-left {
    flex: 1.8;
    padding-top: 5px;

    .info-left-first-line {
      font-size: 15px;
      font-family: PingFang SC;
      font-weight: bold;
      color: rgba(238, 38, 51, 1);

      text {
        font-size: 36px;
      }

    }

    .info-left-third-line {
      height: 65px;
      font-size: 22px;
      font-family: PingFang SC;
      font-weight: bold;
      color: rgba(0, 0, 0, 1);
      overflow: hidden;
    }

    .info-left-fourth-line,
    .info-left-fifth-line{
      font-size: 16px;
      font-family: PingFang SC;
      font-weight: bold;
      color: rgba(179, 179, 179, 1);

      .text {
        text-align: left;
        width: 300px;
        overflow: hidden;
      }
    }

  }

  .info-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;

    &-first-line {
      margin-top: 13px;
      margin-bottom: 12px;
      height: 142px;
      width: 142px;
      background: rgba(247, 247, 247, 1);
    }

    &-second-line {
      font-size: 14px;
      font-family: PingFang SC;
      font-weight: bold;
      color: rgba(85, 85, 85, 1);
    }

  }
}

.user-button {
  text-align: center;
  font-size: 36px;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

  .generate-images {
    width: 544px;
    height: auto;
    img {
      height 100%;
    }
  }

//隐藏生成海报前的静态页
.hidden-page {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: -100;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}